class Solution {
public:
    vector<string> commonChars(vector<string>& words) {
        vector<string>res;
         for(char c='a';c<='z';c++){
            int mincount=INT_MAX;
            for(const string& word:words){
                int count=0;
                for(char ch:word){
                    if(ch==c){
                        count++;
                    }
                }
                mincount=min(mincount,count);
                if(mincount==0){
                  break;
                 }

            }
            for(int i=0;i<mincount;i++){
                res.push_back(string(1,c));
            }
         }
         return res;
    }
};
